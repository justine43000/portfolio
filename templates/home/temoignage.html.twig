			{% for temoignage in temoignages %}
				<div class=" float-left -mr-[100%] hidden w-full text-center transition-transform duration-[600ms] ease-in-out motion-reduce:transition-none" data-te-carousel-active data-te-carousel-item style="backface-visibility: hidden">
					<div class="flex flex-col items-center justify-center h-full">
						{% if temoignage.image %}
							<img src="{{ asset('uploads/temoignages/' ~ temoignage.image) }}" class="h-24 w-24 rounded-full shadow-lg dark:shadow-black/30 mb-6 p-5" alt="sample image"/>
